@model IDCapstone.Models.Video
@inject IDCapstone.Services.EmbedUrlService EM
@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row justify-content-center align-content-center align-items-center">
        <div>
           
                <iframe src="@EM.GetEmbedUrl(Model.Url)&autoplay=false"
                        height="500"
                        width="1000"
                        frameborder="0"
                        scrolling="no"
                        allowfullscreen="true">
                </iframe>

          
        </div>
    </div>
    <div class="row justify-content-center align-content-center align-items-center">
        <div>
            <a title="Add to Favourites!" style="font-size:x-large" asp-action="Create" asp-controller="Favourites" asp-route-videoId="@Model.Id"><i class="las la-heart"></i></a>

        </div>
    </div>
    <div class="row justify-content-center align-content-center align-items-center">
        <div>
            @foreach (var comment in Model.Comments)
            {
            <div class="row">
                <p>@comment.CommentText</p>
                &nbsp;
                &nbsp;
                &nbsp;
                <p>@comment.TimeStamp</p>
                &nbsp;
                &nbsp;
                &nbsp;
                <a title="Flag Comment!" asp-action="Create" asp-controller="FlaggedComments" asp-route-commentId="@comment.Id"><i class="las la-flag"></i></a>
            </div>
            }
        </div>
    </div>
    <div class="row justify-content-center align-content-center align-items-center">
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>



